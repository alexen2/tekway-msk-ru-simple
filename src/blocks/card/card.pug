mixin card(data)
	div.card
		div.row
			div.coll-12.col-md-6.card__images-wrapper
				img.card__big-img(src=data.images[0] alt=data.title)

				if data.images
					div.card__images
						each img, index in data.images
							if index == 0
								img.card__small-img.card__small-img--active(src=img alt=data.title)
							else
								img.card__small-img(src=img alt=data.title)
			
			div.coll-12.col-md-6
				if data.title
					h2.h2.card__title!= data.title

				if data.description
					p.card__description!= data.description

				//- if data.price
				//- 	p.card__price!= data.price

				if data.parameters
					each list in data.parameters
						+list({title: list.title, value: list.value, class: "list--no-list-style"})

				+button({text: "Запросить цену", product: data.title})(class="modal-show")